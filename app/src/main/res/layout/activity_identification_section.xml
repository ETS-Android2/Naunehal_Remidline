<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="form"
            type="edu.aku.hassannaqvi.naunehal_remidline.models.Form" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/fldGrpHH01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- hh05  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh05"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_hh05" />

                        <TextView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/hh05" />

                        <Spinner
                            android:id="@+id/hh05"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- hh06  Input-Numeric   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh06"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_hh06" />

                        <TextView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/hh06" />

                        <Spinner
                            android:id="@+id/hh06"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- hh08  Input-Numeric   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh08"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_hh08" />

                        <TextView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/hh08" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/hh08"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="######"
                            android:inputType="number"
                            android:text="@={form.hh08}"
                            app:mask="######" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- hh09  Input-Numeric   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVhh09"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_hh09" />

                        <TextView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/hh09" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/hh09"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="#-####-###"
                            android:inputType="textCapCharacters"
                            android:maxLength="10"
                            android:text="@={form.hh09}" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hhHEad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="sans-serif"
                    android:padding="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/checkHH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="checkHHExist"
                    android:padding="10dp"
                    android:text="CHECK HH Exist"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/fldGrpcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/whiteOverlay"
                    android:drawableStart="@drawable/database"
                    android:onClick="childList"
                    android:padding="8dp"
                    android:text="Child List"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/blackOverlay" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>